drizzle-generate:
  bunx drizzle-kit generate

drizzle-migrate:
  bunx drizzle-kit migrate

build-and-deploy:
  podman build . -t ghcr.io/likeon/geometa-api:latest --arch arm64
  podman push ghcr.io/likeon/geometa-api:latest
  KUBECONFIG=$(pwd)/../../cluster/talos/kubeconfig kubectl -n geometa-prod rollout restart deployment api
