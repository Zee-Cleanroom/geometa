{
  "name": "api",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --target bun --compile --minify-whitespace --minify-syntax --production --outfile server",
    "db:generate": "drizzle-kit generate",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "dotenv -e .env drizzle-kit migrate",
    "db:migrate:prod": "dotenv -e .env.prod.local -e .env drizzle-kit migrate"
  },
  "dependencies": {
    "drizzle-orm": "^0.43.1",
    "elysia": "^1.3.1"
  },
  "devDependencies": {
    "bun-types": "latest",
    "drizzle-kit": "^0.31.1"
  }
}
